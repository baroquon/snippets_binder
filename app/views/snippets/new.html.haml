= error_messages_for(:snippet)
= render :partial => "shared/side_nav"
.form-container
  - form_for :snippet, @snippet, :url => snippets_path do |form|
    .main-container
      %label{ :for => 'name'}
        Title
      = form.text_field :name
      %label{ :for => 'description'}
        Snippet
      = form.text_area :description, "class" => 'snippet-box'
      = select_tag "categories", options_for_select(@categories.collect { |p| [p.name, p.id] })

      .submit-container
        = submit_tag 'Submit'
.clear
