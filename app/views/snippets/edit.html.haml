= error_messages_for(:snippet)
= render :partial => "shared/side_nav"
.form-container
  - form_for :snippet, @snippet, :url => { :action => "update" }, :html => { :multipart => true, :method => :put } do |form|
    .main-container
      %label{ :for => 'name'}
        Title
      = form.text_field :name
      %label{ :for => 'description'}
        Snippet
      = form.text_area :description, "class" => 'snippet-box'
    .submit-container
      = submit_tag 'Edit'
.clear
