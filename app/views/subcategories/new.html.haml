= error_messages_for(:subcategory)
.form-container
  - form_for :subcategory, @subcategory, :url => subcategories_path do |form|
    .main-container
      %label{ :for => 'name'}
        Title
      = form.text_field :name
      = hidden_field_tag :category_id, params[:category_id]
      .submit-container
      = submit_tag 'Submit'
.clear
